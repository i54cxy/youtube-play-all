{
  "manifest_version": 3,
  "name": "Play All button for YouTube",
  "description": "Brings back the Play All button on YouTube.",
  "version": "0.0.0.2",
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
