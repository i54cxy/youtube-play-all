{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "Brings back the Play All button on YouTube.",
  "default_locale": "en",
  "version": "0.0.0.4",
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}
